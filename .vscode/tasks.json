{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pnpm: compile",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "compile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/packages/vscode-extension"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}